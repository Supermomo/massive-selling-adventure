	private DatabaseMockUp() {
		userList = new HashMap<String, User>();
		connectedUser = new HashMap<String, User>();
		try {
			LectureBase lecture = new LectureBase(".\\BD.txt");
			for(User user : lecture.getListePersonne()) {
				
